<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/menu_bt"
        android:layout_width="27dp"
        android:layout_height="24dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logo_bt"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/notice_bt"
        android:layout_width="27dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/notice"
        tools:layout_editor_absoluteX="356dp"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:id="@+id/profile_bt"
        android:layout_width="27dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/profile"
        tools:layout_editor_absoluteX="383dp"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:id="@+id/logo_bt"
        android:layout_width="141dp"
        android:layout_height="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/eroe_logo"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/login_txt"
        android:layout_width="64dp"
        android:layout_height="28dp"
        android:text="로그인"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/id_txt"
        android:layout_width="62dp"
        android:layout_height="29dp"
        android:text="아이디"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="107dp" />

    <EditText
        android:id="@+id/input_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="아이디 입력"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="136dp" />

    <TextView
        android:id="@+id/password_txt"
        android:layout_width="86dp"
        android:layout_height="27dp"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="189dp" />

    <EditText
        android:id="@+id/input_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="216dp" />

    <Button
        android:id="@+id/find_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="261dp" />

    <Button
        android:id="@+id/find_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="261dp" />

    <Button
        android:id="@+id/login_bt"
        android:layout_width="354dp"
        android:layout_height="41dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="로그인"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="354dp" />

    <Button
        android:id="@+id/signup_bt"
        android:layout_width="354dp"
        android:layout_height="41dp"
        android:text="회원가입"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="395dp" />

</androidx.constraintlayout.widget.ConstraintLayout>